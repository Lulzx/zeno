<!-- Reacher: 2-link planar arm reaching to a target
     Based on MuJoCo Gymnasium Reacher-v4 environment
     Task: Control 2 joints to reach a randomly placed target -->
<mujoco model="reacher">
    <option timestep="0.02" gravity="0 0 -9.81"/>

    <default>
        <joint damping="0.1" armature="0.01"/>
        <geom friction="1 0.1 0.1"/>
    </default>

    <worldbody>
        <!-- Ground plane -->
        <geom type="plane" size="2 2 0.1" rgba="0.8 0.9 0.8 1"/>

        <!-- Base of the arm (fixed to world) -->
        <body name="base" pos="0 0 0.01">
            <geom type="cylinder" size="0.05 0.01" rgba="0.3 0.3 0.3 1"/>

            <!-- First link -->
            <body name="link0" pos="0 0 0.01">
                <joint name="joint0" type="hinge" axis="0 0 1" range="-3.14 3.14"/>
                <geom type="capsule" fromto="0 0 0 0.1 0 0" size="0.01" rgba="0.4 0.6 0.8 1"/>

                <!-- Second link -->
                <body name="link1" pos="0.1 0 0">
                    <joint name="joint1" type="hinge" axis="0 0 1" range="-3.14 3.14"/>
                    <geom type="capsule" fromto="0 0 0 0.1 0 0" size="0.01" rgba="0.4 0.8 0.6 1"/>

                    <!-- Fingertip (end effector) -->
                    <body name="fingertip" pos="0.1 0 0">
                        <geom name="fingertip" type="sphere" size="0.01" rgba="0.8 0.4 0.4 1"/>
                    </body>
                </body>
            </body>
        </body>

        <!-- Target (position randomized during reset) -->
        <body name="target" pos="0.1 0.1 0.01">
            <geom name="target" type="sphere" size="0.02" rgba="0.9 0.2 0.2 0.5"/>
        </body>
    </worldbody>

    <actuator>
        <motor joint="joint0" ctrlrange="-1 1" gear="50"/>
        <motor joint="joint1" ctrlrange="-1 1" gear="50"/>
    </actuator>

    <sensor>
        <jointpos joint="joint0"/>
        <jointpos joint="joint1"/>
        <jointvel joint="joint0"/>
        <jointvel joint="joint1"/>
        <framepos objtype="geom" objname="fingertip"/>
        <framepos objtype="geom" objname="target"/>
    </sensor>
</mujoco>
