<mujoco model="hopper">
    <option timestep="0.008" gravity="0 0 -9.81"/>

    <default>
        <joint armature="0.01" damping="0.1" limited="true"/>
        <geom contype="1" conaffinity="1" condim="3" friction="0.7 0.1 0.1" margin="0.001"/>
    </default>

    <worldbody>
        <!-- Ground plane -->
        <geom type="plane" size="50 50 0.1" rgba="0.8 0.9 0.8 1"/>

        <!-- Torso -->
        <body name="torso" pos="0 0 1.25">
            <joint name="root" type="free"/>
            <geom name="torso_geom" type="capsule" fromto="0 0 0 0 0 0.4" size="0.05" rgba="0.5 0.3 0.6 1"/>

            <!-- Thigh -->
            <body name="thigh" pos="0 0 0">
                <joint name="hip" type="hinge" axis="0 1 0" range="-150 20"/>
                <geom type="capsule" fromto="0 0 0 0 0 -0.45" size="0.05" rgba="0.5 0.3 0.6 1"/>

                <!-- Leg -->
                <body name="leg" pos="0 0 -0.45">
                    <joint name="knee" type="hinge" axis="0 1 0" range="-150 0"/>
                    <geom type="capsule" fromto="0 0 0 0 0 -0.5" size="0.04" rgba="0.5 0.3 0.6 1"/>

                    <!-- Foot -->
                    <body name="foot" pos="0 0 -0.5">
                        <joint name="ankle" type="hinge" axis="0 1 0" range="-45 45"/>
                        <geom type="capsule" fromto="-0.13 0 0 0.26 0 0" size="0.06" rgba="0.3 0.2 0.4 1"/>
                    </body>
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <motor joint="hip" ctrlrange="-1 1" gear="200"/>
        <motor joint="knee" ctrlrange="-1 1" gear="200"/>
        <motor joint="ankle" ctrlrange="-1 1" gear="200"/>
    </actuator>

    <sensor>
        <!-- Torso sensors -->
        <framepos objtype="body" objname="torso"/>
        <framequat objtype="body" objname="torso"/>
        <framelinvel objtype="body" objname="torso"/>
        <frameangvel objtype="body" objname="torso"/>

        <!-- Joint sensors -->
        <jointpos joint="hip"/>
        <jointpos joint="knee"/>
        <jointpos joint="ankle"/>
        <jointvel joint="hip"/>
        <jointvel joint="knee"/>
        <jointvel joint="ankle"/>
    </sensor>
</mujoco>
