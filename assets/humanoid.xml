<mujoco model="humanoid">
    <option timestep="0.005" gravity="0 0 -9.81"/>

    <default>
        <joint armature="0.01" damping="0.5" limited="true"/>
        <geom contype="1" conaffinity="1" condim="3" friction="0.8 0.1 0.1" margin="0.001"/>
    </default>

    <worldbody>
        <!-- Ground plane -->
        <geom type="plane" size="50 50 0.1" rgba="0.8 0.9 0.8 1"/>

        <!-- Pelvis (root) -->
        <body name="pelvis" pos="0 0 1.25">
            <joint name="root" type="free"/>
            <geom name="pelvis_geom" type="capsule" fromto="-0.1 0 0 0.1 0 0" size="0.08" rgba="0.7 0.5 0.3 1"/>

            <!-- Torso -->
            <body name="torso" pos="0 0 0.2">
                <joint name="abdomen_y" type="hinge" axis="0 1 0" range="-45 45"/>
                <geom name="torso_geom" type="capsule" fromto="0 0 0 0 0 0.25" size="0.1" rgba="0.7 0.5 0.3 1"/>

                <!-- Upper torso -->
                <body name="upper_torso" pos="0 0 0.25">
                    <joint name="abdomen_x" type="hinge" axis="1 0 0" range="-35 35"/>
                    <geom name="upper_torso_geom" type="capsule" fromto="0 0 0 0 0 0.15" size="0.1" rgba="0.7 0.5 0.3 1"/>

                    <!-- Head -->
                    <body name="head" pos="0 0 0.25">
                        <joint name="neck" type="hinge" axis="0 1 0" range="-40 40"/>
                        <geom name="head_geom" type="sphere" size="0.1" pos="0 0 0.1" rgba="0.9 0.7 0.5 1"/>
                    </body>

                    <!-- Right arm -->
                    <body name="right_upper_arm" pos="-0.18 0 0.12">
                        <joint name="right_shoulder_x" type="hinge" axis="1 0 0" range="-85 60"/>
                        <geom type="capsule" fromto="0 0 0 -0.18 0 0" size="0.04" rgba="0.7 0.5 0.3 1"/>

                        <body name="right_lower_arm" pos="-0.18 0 0">
                            <joint name="right_elbow" type="hinge" axis="0 1 0" range="-90 50"/>
                            <geom type="capsule" fromto="0 0 0 -0.18 0 0" size="0.035" rgba="0.7 0.5 0.3 1"/>
                        </body>
                    </body>

                    <!-- Left arm -->
                    <body name="left_upper_arm" pos="0.18 0 0.12">
                        <joint name="left_shoulder_x" type="hinge" axis="1 0 0" range="-60 85"/>
                        <geom type="capsule" fromto="0 0 0 0.18 0 0" size="0.04" rgba="0.7 0.5 0.3 1"/>

                        <body name="left_lower_arm" pos="0.18 0 0">
                            <joint name="left_elbow" type="hinge" axis="0 1 0" range="-90 50"/>
                            <geom type="capsule" fromto="0 0 0 0.18 0 0" size="0.035" rgba="0.7 0.5 0.3 1"/>
                        </body>
                    </body>
                </body>
            </body>

            <!-- Right leg -->
            <body name="right_thigh" pos="-0.1 0 -0.05">
                <joint name="right_hip_x" type="hinge" axis="1 0 0" range="-25 110"/>
                <geom type="capsule" fromto="0 0 0 0 0 -0.34" size="0.06" rgba="0.7 0.5 0.3 1"/>

                <body name="right_shin" pos="0 0 -0.34">
                    <joint name="right_knee" type="hinge" axis="0 1 0" range="-160 -2"/>
                    <geom type="capsule" fromto="0 0 0 0 0 -0.3" size="0.05" rgba="0.7 0.5 0.3 1"/>

                    <body name="right_foot" pos="0 0 -0.3">
                        <joint name="right_ankle" type="hinge" axis="0 1 0" range="-50 50"/>
                        <geom type="box" size="0.05 0.03 0.08" pos="0.03 0 0" rgba="0.5 0.3 0.2 1"/>
                    </body>
                </body>
            </body>

            <!-- Left leg -->
            <body name="left_thigh" pos="0.1 0 -0.05">
                <joint name="left_hip_x" type="hinge" axis="1 0 0" range="-25 110"/>
                <geom type="capsule" fromto="0 0 0 0 0 -0.34" size="0.06" rgba="0.7 0.5 0.3 1"/>

                <body name="left_shin" pos="0 0 -0.34">
                    <joint name="left_knee" type="hinge" axis="0 1 0" range="-160 -2"/>
                    <geom type="capsule" fromto="0 0 0 0 0 -0.3" size="0.05" rgba="0.7 0.5 0.3 1"/>

                    <body name="left_foot" pos="0 0 -0.3">
                        <joint name="left_ankle" type="hinge" axis="0 1 0" range="-50 50"/>
                        <geom type="box" size="0.05 0.03 0.08" pos="0.03 0 0" rgba="0.5 0.3 0.2 1"/>
                    </body>
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <!-- Torso -->
        <motor joint="abdomen_y" ctrlrange="-1 1" gear="100"/>
        <motor joint="abdomen_x" ctrlrange="-1 1" gear="100"/>
        <motor joint="neck" ctrlrange="-1 1" gear="25"/>

        <!-- Right arm -->
        <motor joint="right_shoulder_x" ctrlrange="-1 1" gear="75"/>
        <motor joint="right_elbow" ctrlrange="-1 1" gear="75"/>

        <!-- Left arm -->
        <motor joint="left_shoulder_x" ctrlrange="-1 1" gear="75"/>
        <motor joint="left_elbow" ctrlrange="-1 1" gear="75"/>

        <!-- Right leg -->
        <motor joint="right_hip_x" ctrlrange="-1 1" gear="150"/>
        <motor joint="right_knee" ctrlrange="-1 1" gear="150"/>
        <motor joint="right_ankle" ctrlrange="-1 1" gear="90"/>

        <!-- Left leg -->
        <motor joint="left_hip_x" ctrlrange="-1 1" gear="150"/>
        <motor joint="left_knee" ctrlrange="-1 1" gear="150"/>
        <motor joint="left_ankle" ctrlrange="-1 1" gear="90"/>
    </actuator>

    <sensor>
        <!-- Pelvis sensors -->
        <framepos objtype="body" objname="pelvis"/>
        <framequat objtype="body" objname="pelvis"/>
        <framelinvel objtype="body" objname="pelvis"/>
        <frameangvel objtype="body" objname="pelvis"/>

        <!-- Joint position sensors -->
        <jointpos joint="abdomen_y"/>
        <jointpos joint="abdomen_x"/>
        <jointpos joint="neck"/>
        <jointpos joint="right_shoulder_x"/>
        <jointpos joint="right_elbow"/>
        <jointpos joint="left_shoulder_x"/>
        <jointpos joint="left_elbow"/>
        <jointpos joint="right_hip_x"/>
        <jointpos joint="right_knee"/>
        <jointpos joint="right_ankle"/>
        <jointpos joint="left_hip_x"/>
        <jointpos joint="left_knee"/>
        <jointpos joint="left_ankle"/>

        <!-- Joint velocity sensors -->
        <jointvel joint="abdomen_y"/>
        <jointvel joint="abdomen_x"/>
        <jointvel joint="neck"/>
        <jointvel joint="right_shoulder_x"/>
        <jointvel joint="right_elbow"/>
        <jointvel joint="left_shoulder_x"/>
        <jointvel joint="left_elbow"/>
        <jointvel joint="right_hip_x"/>
        <jointvel joint="right_knee"/>
        <jointvel joint="right_ankle"/>
        <jointvel joint="left_hip_x"/>
        <jointvel joint="left_knee"/>
        <jointvel joint="left_ankle"/>
    </sensor>
</mujoco>
