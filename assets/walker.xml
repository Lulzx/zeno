<mujoco model="walker2d">
    <option timestep="0.008" gravity="0 0 -9.81"/>

    <default>
        <joint armature="0.01" damping="0.1" limited="true"/>
        <geom contype="1" conaffinity="1" condim="3" friction="0.7 0.1 0.1" margin="0.001"/>
    </default>

    <worldbody>
        <!-- Ground plane -->
        <geom type="plane" size="50 50 0.1" rgba="0.8 0.9 0.8 1"/>

        <!-- Torso -->
        <body name="torso" pos="0 0 1.25">
            <joint name="root" type="free"/>
            <geom name="torso_geom" type="capsule" fromto="0 0 -0.07 0 0 0.07" size="0.05" rgba="0.7 0.3 0.1 1"/>

            <!-- Right thigh -->
            <body name="right_thigh" pos="0 0 -0.05">
                <joint name="right_hip" type="hinge" axis="0 1 0" range="-150 20"/>
                <geom type="capsule" fromto="0 0 0 0 0 -0.45" size="0.05" rgba="0.7 0.3 0.1 1"/>

                <body name="right_leg" pos="0 0 -0.45">
                    <joint name="right_knee" type="hinge" axis="0 1 0" range="-150 0"/>
                    <geom type="capsule" fromto="0 0 0 0 0 -0.5" size="0.04" rgba="0.7 0.3 0.1 1"/>

                    <body name="right_foot" pos="0 0 -0.5">
                        <joint name="right_ankle" type="hinge" axis="0 1 0" range="-45 45"/>
                        <geom type="capsule" fromto="-0.1 0 0 0.15 0 0" size="0.06" rgba="0.4 0.2 0.1 1"/>
                    </body>
                </body>
            </body>

            <!-- Left thigh -->
            <body name="left_thigh" pos="0 0 -0.05">
                <joint name="left_hip" type="hinge" axis="0 1 0" range="-150 20"/>
                <geom type="capsule" fromto="0 0 0 0 0 -0.45" size="0.05" rgba="0.7 0.3 0.1 1"/>

                <body name="left_leg" pos="0 0 -0.45">
                    <joint name="left_knee" type="hinge" axis="0 1 0" range="-150 0"/>
                    <geom type="capsule" fromto="0 0 0 0 0 -0.5" size="0.04" rgba="0.7 0.3 0.1 1"/>

                    <body name="left_foot" pos="0 0 -0.5">
                        <joint name="left_ankle" type="hinge" axis="0 1 0" range="-45 45"/>
                        <geom type="capsule" fromto="-0.1 0 0 0.15 0 0" size="0.06" rgba="0.4 0.2 0.1 1"/>
                    </body>
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <motor joint="right_hip" ctrlrange="-1 1" gear="100"/>
        <motor joint="right_knee" ctrlrange="-1 1" gear="100"/>
        <motor joint="right_ankle" ctrlrange="-1 1" gear="100"/>
        <motor joint="left_hip" ctrlrange="-1 1" gear="100"/>
        <motor joint="left_knee" ctrlrange="-1 1" gear="100"/>
        <motor joint="left_ankle" ctrlrange="-1 1" gear="100"/>
    </actuator>

    <sensor>
        <!-- Torso sensors -->
        <framepos objtype="body" objname="torso"/>
        <framequat objtype="body" objname="torso"/>
        <framelinvel objtype="body" objname="torso"/>
        <frameangvel objtype="body" objname="torso"/>

        <!-- Joint position sensors -->
        <jointpos joint="right_hip"/>
        <jointpos joint="right_knee"/>
        <jointpos joint="right_ankle"/>
        <jointpos joint="left_hip"/>
        <jointpos joint="left_knee"/>
        <jointpos joint="left_ankle"/>

        <!-- Joint velocity sensors -->
        <jointvel joint="right_hip"/>
        <jointvel joint="right_knee"/>
        <jointvel joint="right_ankle"/>
        <jointvel joint="left_hip"/>
        <jointvel joint="left_knee"/>
        <jointvel joint="left_ankle"/>
    </sensor>
</mujoco>
